@model MovieListModel

@{ 
    ViewBag.Title = Model.Note;
}

<div class="site-section aos-init aos-animate" data-aos="fade">
    <div class="container-fluid">
        <h2 class="text-center mt-2 mb-1" style = "text-transform:capitalize;">@Model.Note Movies</h2>
        <div class="row" id="lightgallery">
            @await Html.PartialAsync("~/Areas/Movie/Views/Movie/_PartialMovie.cshtml", Model.Movies)
        </div>
    </div>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
